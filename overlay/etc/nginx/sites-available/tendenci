upstream tendenci_app_server {
  server unix:/var/www/tendenci/run/gunicorn.sock fail_timeout=0;
}

server {
    listen 80;
    server_name localhost;

    charset   utf-8;
    keepalive_timeout  65;
    client_max_body_size  30M;
    
    access_log /var/logs/nginx-access.log;
    error_log /var/logs/nginx-error.log;

    location /static/ {
        root /var/www/tendenci/;
        access_log off;
        expires 30d;
    }

    location /media/ {
        root /var/www/tendenci/;
        access_log off;
        expires 30d;
    }

    location /themes/([a-zA-Z0-9\-\_]+)/media/ {
        root /var/www/tendenci/themes/$1/media/;
        access_log off;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        if (!-f $request_filename) {
            proxy_pass http://tendenci_app_server;
            break;
        }
    }
}